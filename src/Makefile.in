# @configure_input@
#
# Package-specific substitution variables
package		= @PACKAGE_NAME@
version		= @PACKAGE_VERSION@
tarname		= @PACKAGE_TARNAME@
distdir		= $(tarname)-$(version)

# Prefix-specific substitution variables
prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@

# Tool-specific substitution variables
CFLAGS		?= -g -O2

# VPATH-specific substitution variables
srcdir		= @srcdir@
VPATH		= @srcdir@

objects = entwatch entbuff

all: entwatch entbuff

entwatch: entwatch.c
	$(CC) $(CFLAGS) $(CPPFLAGS) -I. -I$(srcdir) -I.. -o $@ $(srcdir)/entwatch.c

entbuff: entbuff.c
	$(CC) $(CFLAGS) $(CPPFLAGS) -I. -I$(srcdir) -I.. -o $@ $(srcdir)/entbuff.c

clean:
	-rm $(objects) >/dev/null 2>&1


checkentwatch: all
	@echo "*** entwatch check passed"

checkentbuff: all
	@echo "*** checkentbuff nullop for now"

# Each test is its own rule. Each test depends on things being built.
# If everything built, and each test rule doesn't fail, we're good.
check: checkentwatch checkentbuff
	@echo "*** All tests passed"

install:
	install -d $(DESTDIR)$(bindir)
	install -m 0755 entwatch $(DESTDIR)$(bindir)
	install -m 0755 entbuff $(DESTDIR)$(bindir)

uninstall:
	-rm $(DESTDIR)$(bindir)/entwatch $(DESTDIR)$(bindir)
	-rm $(DESTDIR)$(bindir)/entbuff $(DESTDIR)$($bindir)

Makefile: Makefile.in ../config.status
	cd .. && ./config.status src/$@

../config.status: ../configure
	cd .. && ./config.status --recheck

.PHONY: all clean check checkentwatch checkentbuff install uninstall
